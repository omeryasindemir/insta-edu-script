<!-- views/admin.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
      color: #333;
    }

    header {
      background-color: #333;
      color: #fff;
      padding: 1em;
      text-align: center;
    }

    nav {
      background-color: #555;
      color: #fff;
      padding: 1em;
      text-align: center;
    }

    nav a {
      color: #fff;
      text-decoration: none;
      margin: 0 1em;
    }

    .container {
      margin: 2em;
    }

    h2 {
      color: #333;
    }

    ul {
      list-style: none;
      padding: 0;
    }

    li {
      margin-bottom: 1em;
    }

    img {
      max-width: 100%;
      height: 450px;
      border: 1px solid #ddd;
      border-radius: 4px;
    }
  </style>
</head>
<body>
  <header>
    <h1>Admin Panel</h1>
  </header>
  <nav>
    <a href="/logout">Logout</a>
  </nav>
  <div class="container">
    <h2>Logs</h2>
    <pre><%= logs %></pre>
    <h2>Images</h2>
    <ul>
      <% images.forEach(image => { %>
        <li><img src="<%= image %>" alt="Image"></li>
      <% }); %>
    </ul>
  </div>
</body>
</html>
